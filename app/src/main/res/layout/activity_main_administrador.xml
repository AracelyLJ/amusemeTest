<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainAdministrador">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            app:srcCompat="@drawable/logo2_" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--<Button
                    android:id="@+id/btnNotificacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Notificaciones" />-->

                <Button
                    android:id="@+id/btnsucursales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Sucursales" />

                <Button
                    android:id="@+id/btnTipoMaquina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:text="Tipo de máquina" />

                <Button
                    android:id="@+id/btnUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Usuarios" />

                <Button
                    android:id="@+id/btnmaquina"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Máquina" />

                <Button
                    android:id="@+id/btnReportes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Reportes" />

                <Button
                    android:id="@+id/btnCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_verde"
                    android:onClick="onClick"
                    android:text="Enviar Correo" />

                <Button
                    android:id="@+id/btnSalir"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/boton_redondo_azul"
                    android:text="Cerrar Sesion"
                    android:onClick="onClick"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</LinearLayout>